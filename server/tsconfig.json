{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["esnext"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      { "name": "ts-graphql-plugin", "schema": "schema.graphql", "tag": "gql" }
    ]
  },
  "ts-node": {
    "transpileOnly": true
  }
}
